<%- include('../partials/header') %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h4"></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <!-- <div class="btn-group mr-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div> -->
      <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#place-order">
        <!-- <span data-feather="award"></span> -->
        Get a meal
      </button>
    </div>
  </div>

  <canvas class="my-4 w-100" id="myChart" width="900" height="280"></canvas>

  <h1 class="h4">Order History</h1>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Meal</th>
          <th>Amount</th>
          <th>Vendor</th>
          <th>TID</th>
        </tr>
      </thead>
      <tbody>
        <% orders.map(order => { %>
        <tr>
          <td><%= order.meal %></td>
          <td>â‚¦ <%= order.amount %>.00</td>
          <td><%= order.vendor %></td>
          <td><%= order._id %></td>
