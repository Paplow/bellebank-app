      </tbody>
    </table>
  </div>
</main>

<!-- Fund Modal -->
<div class="modal fade" id="add-funds" tabindex="-1" role="dialog" aria-labelledby="fundsCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="fundsCenterTitle">Balance Top-up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Add funds</button>
      </div>
    </div>
  </div>
</div>


<!-- Order Meal Modal -->
<div class="modal fade" id="place-order" tabindex="-1" role="dialog" aria-labelledby="orderCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="orderCenterTitle">Order a meal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/meals" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="modal-body">
          <div class="form-group">
            <label for="vendor">Vendor</label>
            <select class="custom-select" name="vendor" required>
              <option value="">-- Vendor --</option>
              <option value="Unique kitchen">Unique kitchen</option>
              <option value="SOS">SOS</option>
              <option value="Acadel">Acadel</option>
            </select>
          </div>
          <div class="form-group">
            <label for="meal">Meal</label>
            <select class="custom-select" name="meal" required>
              <option value="">-- Meal --</option>
              <option value="Fried rice & chicken">Fried rice & chicken</option>
              <option value="Jollof rice">Jollof rice</option>
              <option value="Jollof beans">Jollof beans</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Order</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
